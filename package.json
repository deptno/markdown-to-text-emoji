{
  "name": "markdown-to-text-emoji",
  "version": "1.0.1",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "https://github.com/deptno/markdown-to-text-emoji.git",
  "author": "Bonggyun Lee <deptno@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "test:watch": "jest --watch",
    "test": "jest --coverage"
  },
  "dependencies": {
    "escape-string-regexp": "^1.0.5",
    "ramda": "^0.25.0"
  },
  "devDependencies": {
    "@types/jest": "^23.1.1",
    "@types/ramda": "^0.25.34",
    "jest": "^23.1.0",
    "ts-jest": "^22.4.6",
    "typescript": "2.8"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/*.(test|spec).(ts|tsx)"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "text-summary"
    ]
  }
}
